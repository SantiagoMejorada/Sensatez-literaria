---
interface Props {
  image: string;
  title: string;
}

const { image, title } = Astro.props as Props;
const currentPath = Astro.url.pathname;
const slug = title.toLowerCase().replace(/\s+/g, '-');
const href = `${currentPath}/${slug}`;
---

<a href={href} class="block shadow-lg p-4 rounded-lg cursor-pointer transition-transform transform hover:scale-105">
  <img src={image} alt={title} class="mx-auto mb-4 max-w-56"/>
  <h3 class="text-xl text-center font-lora text-[#322203] mb-2">{title}</h3>
</a>
