---
interface Props {
  image: string;
  title: string;
  description: string;
}

const { image, title, description } = Astro.props as Props;
---

<div class="shadow-lg p-4 rounded-lg cursor-pointer transition-transform transform hover:scale-105">
  <img src={image} alt={title} class="mx-auto mb-4 max-w-56"/>
  <h3 class="text-xl text-center font-lora text-[#322203] mb-2">{title}</h3>
  <!-- <p class="font-inter text-[#322203] text-justify">{description}</p> -->
</div>
