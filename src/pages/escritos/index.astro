---
import { getCollection } from 'astro:content';
import { parse, isValid } from 'date-fns';
import Layout from '../../layouts/Layout.astro';
import Card from '../../components/Card.astro';

const posts = (await getCollection('escritos')).sort((a, b) => {
  const dateA = parse(a.data.date, 'dd/MM/yyyy', new Date());
  const dateB = parse(b.data.date, 'dd/MM/yyyy', new Date());

  const timeA = isValid(dateA) ? dateA.getTime() : 0;
  const timeB = isValid(dateB) ? dateB.getTime() : 0;

  return timeB - timeA;
});

---

<Layout title='ESCRITOS'>
  <section class="text-center p-10">
    <div class="max-w-7xl mx-auto px-4 md:px-0">
      <div class="mb-12">
        <div class="flex items-center justify-center space-x-4">
            <img src="/img/general/sparkle.png" class="w-16 h-16" alt="">
            <h1 class="text-4xl font-lora text-[#322203]">ESCRITOS</h1>
        </div>
      </div>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {posts.map((post) => (
          <Card
            image={post.data.image}
            title={post.data.title}
          />
        ))}
      </div>
    </div>
  </section>
</Layout>
